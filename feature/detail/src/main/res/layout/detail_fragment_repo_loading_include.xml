<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="48dp"
    android:paddingHorizontal="24dp"
    tools:context="com.ileitelabs.trends.ui.RepoDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/repo_detail_owner_iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="56dp"
            android:background="@color/home_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/repo_detail_name_tv"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:layout_marginTop="24dp"
            android:background="@color/home_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/repo_detail_owner_iv" />


        <TextView
            android:id="@+id/repo_detail_owner_name_tv"
            android:layout_width="160dp"
            android:layout_height="15dp"
            android:layout_marginTop="6dp"
            android:background="@color/home_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/repo_detail_name_tv" />

        <TextView
            android:id="@+id/repo_description_tv"
            android:layout_width="417dp"
            android:layout_height="49dp"
            android:layout_marginTop="12dp"
            android:background="@color/home_gray"
            android:paddingHorizontal="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/repo_detail_owner_name_tv" />

        <TextView
            android:id="@+id/repo_stars_tv"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:background="@color/home_gray"
            android:drawablePadding="4dp"
            android:paddingHorizontal="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/repo_description_tv" />

        <TextView
            android:id="@+id/repo_url_tv"
            android:layout_width="180dp"
            android:layout_height="15dp"
            android:layout_marginTop="12dp"
            android:background="@color/home_gray"
            android:paddingHorizontal="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/repo_stars_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>